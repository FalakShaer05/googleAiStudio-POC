# Google AI Studio API Key
# Get your API key from: https://ai.google.dev/
GOOGLE_API_KEY=your-api-key-here

# Background Removal Service Configuration
# Options: 'mosida' or 'lightx'
# Default: 'mosida'
# Set to 'lightx' to use LightX API, or 'mosida' to use Mosida API
BACKGROUND_REMOVAL_SERVICE=mosida

# LightX API Key (required only if BACKGROUND_REMOVAL_SERVICE=lightx)
# Get your API key from: https://api.lightxeditor.com/
# Leave empty if using Mosida API
LIGHTX_API_KEY=your-lightx-api-key-here

# Performance Optimization Settings
# Skip pre-upscaling for faster processing (default: false)
# Set to 'true' to skip upscaling before AI conversion - faster but may reduce quality
SKIP_PRE_UPSCALE=false

# Use fast background resize instead of AI resize (default: false)
# Set to 'true' to always use fast resize - faster but may cause slight distortion
# When false, AI resize is used only when aspect ratios differ significantly
USE_FAST_BG_RESIZE=false

# S3 Configuration for LightX Background Removal
# Required if using LightX API and images need to be publicly accessible
# Leave empty if using local server with public URLs or Mosida API
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_DEFAULT_REGION=us-east-1
LIGHTX_S3_BUCKET=your-s3-bucket-name
LIGHTX_S3_PREFIX=converted/
# CloudFront distribution URL (e.g., https://d1234567890.cloudfront.net)
# This should point to your S3 bucket via CloudFront
LIGHTX_IMAGE_BASE_URL=https://your-cloudfront-distribution.cloudfront.net
